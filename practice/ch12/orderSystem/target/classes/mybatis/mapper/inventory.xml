<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mycompany.ordersystem.inventory.repository.InventoryRepository">
  <resultMap id="inventoryResult" type="Inventory">
    <id property="id" column="product_id"/>
    <result property="quantity" column="inventory_quantity"/>
  </resultMap>
  <select id="findById" parameterType="long" resultMap="inventoryResult">
    SELECT * FROM inventory
    WHERE product_id = #{id}
  </select>
  <insert id="save" parameterType="Inventory">
    INSERT INTO inventory (product_id, inventory_quantity)
    VALUES (#{id}, #{quantity})
  </insert>
  <update id="update" parameterType="Inventory">
    UPDATE inventory SET inventory_quantity = #{quantity}
    WHERE product_id = #{id}
  </update>
</mapper>
