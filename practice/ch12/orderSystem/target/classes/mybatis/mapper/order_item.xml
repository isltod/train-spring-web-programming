<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mycompany.ordersystem.order.repository.OrderItemRepository">
  <resultMap id="orderItemResult" type="OrderItem">
    <result property="quantity" column="order_item_quantity"/>
    <result property="order" column="order_id"/>
    <association property="product" column="product_id"
                 select="com.mycompany.ordersystem.product.repository.ProductRepository.findById"/>
  </resultMap>
  <!-- <select id="findAll" parameterType="long" resultMap="orderItemResult"> -->
  <!--   SELECT * FROM order_item WHERE order_id = #{order} -->
  <!-- </select> -->
  <insert id="save" parameterType="OrderItem">
    INSERT INTO order_item(product_id, order_item_quantity, order_id)
      VALUES (#{product.id}, #{quantity}, #{order})
  </insert>
</mapper>